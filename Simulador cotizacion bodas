        function formatCurrency(value) {
            return new Intl.NumberFormat('es-CO', {
                style: 'currency',
                currency: 'COP',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(value);
        }

        function renderCategories() {
            const container = document.getElementById('categories');
            container.innerHTML = '';

            Object.keys(services).forEach(category => {
                const categoryDiv = document.createElement('div');
                categoryDiv.className = 'category';

                const categoryTitle = document.createElement('div');
                categoryTitle.className = 'category-title';
                categoryTitle.textContent = category;
                categoryDiv.appendChild(categoryTitle);

                services[category].forEach((service, index) => {
                    const serviceDiv = document.createElement('div');
                    serviceDiv.className = 'service-item';

                    const checkbox = document.createElement('input');
                    checkbox.type = 'checkbox';
                    checkbox.id = `${category}-${index}`;
                    checkbox.onchange = updateSummary;

                    const serviceContent = document.createElement('div');
                    serviceContent.className = 'service-with-quantity';

                    const label = document.createElement('label');
                    label.htmlFor = `${category}-${index}`;
                    label.textContent = service.name;

                    const priceRange = document.createElement('div');
                    priceRange.className = 'price-range';
                    
                    if (service.perPerson) {
                        priceRange.textContent = `${formatCurrency(service.min)} - ${formatCurrency(service.max)} por persona`;
                    } else {
                        priceRange.textContent = `${formatCurrency(service.min)} - ${formatCurrency(service.max)}`;
                    }

                    serviceContent.appendChild(label);
                    serviceContent.appendChild(priceRange);

                    serviceDiv.appendChild(checkbox);
                    serviceDiv.appendChild(serviceContent);

                    categoryDiv.appendChild(serviceDiv);
                });

                container.appendChild(categoryDiv);
            });
        }

        function updateSummary() {
            const guests = parseInt(document.getElementById('guests').value) || 1;
            const cityFactor = parseFloat(document.getElementById('city').value);
            
            let minTotal = 0;
            let maxTotal = 0;
            const selectedItems = [];

            Object.keys(services).forEach(category => {
                services[category].forEach((service, index) => {
                    const checkbox = document.getElementById(`${category}-${index}`);
                    if (checkbox && checkbox.checked) {
                        let min = service.min;
                        let max = service.max;

                        if (service.perPerson) {
                            min *= guests;
                            max *= guests;
                        }

                        min *= cityFactor;
                        max *= cityFactor;

                        minTotal += min;
                        maxTotal += max;

                        selectedItems.push({
                            category,
                            name: service.name,
                            min,
                            max,
                            perPerson: service.perPerson
                        });
                    }
                });
            });

            const summaryContainer = document.getElementById('summary-items');
            summaryContainer.innerHTML = '';

            if (selectedItems.length === 0) {
                summaryContainer.innerHTML = '<p style="color: #999; text-align: center; padding: 20px;">Selecciona servicios para ver el resumen</p>';
            } else {
                selectedItems.forEach(item => {
                    const itemDiv = document.createElement('div');
                    itemDiv.className = 'summary-item';
                    itemDiv.innerHTML = `
                        <div class="summary-item-name">${item.name}</div>
                        <div class="summary-item-price">${formatCurrency(item.min)} - ${formatCurrency(item.max)}</div>
                    `;
                    summaryContainer.appendChild(itemDiv);
                });
            }

            document.getElementById('min-total').textContent = formatCurrency(minTotal);
            document.getElementById('max-total').textContent = formatCurrency(maxTotal);
            document.getElementById('avg-total').textContent = formatCurrency((minTotal + maxTotal) / 2);

            if (guests > 0) {
                const minPerPerson = minTotal / guests;
                const maxPerPerson = maxTotal / guests;
                document.getElementById('per-person').textContent = `${formatCurrency(minPerPerson)} - ${formatCurrency(maxPerPerson)}`;
            }
        }

        function downloadPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            const guests = parseInt(document.getElementById('guests').value) || 1;
            const citySelect = document.getElementById('city');
            const cityName = citySelect.options[citySelect.selectedIndex].text;
            const cityFactor = parseFloat(citySelect.value);
            
            let minTotal = 0;
            let maxTotal = 0;
            const selectedItems = [];

            Object.keys(services).forEach(category => {
                services[category].forEach((service, index) => {
                    const checkbox = document.getElementById(`${category}-${index}`);
                    if (checkbox && checkbox.checked) {
                        let min = service.min;
                        let max = service.max;

                        if (service.perPerson) {
                            min *= guests;
                            max *= guests;
                        }

                        min *= cityFactor;
                        max *= cityFactor;

                        minTotal += min;
                        maxTotal += max;

                        selectedItems.push({
                            category,
                            name: service.name,
                            min,
                            max
                        });
                    }
                });
            });

            // Header
            doc.setFillColor(102, 126, 234);
            doc.rect(0, 0, 210, 40, 'F');
            doc.setTextColor(255, 255, 255);
            doc.setFontSize(24);
            doc.text('Cotizaci√≥n de Boda', 105, 20, { align: 'center' });
            doc.setFontSize(12);
            doc.text(`Ciudad: ${cityName} | Asistentes: ${guests}`, 105, 30, { align: 'center' });

            // Body
            doc.setTextColor(0, 0, 0);
            let y = 50;

            doc.setFontSize(14);
            doc.setFont(undefined, 'bold');
            doc.text('Servicios Seleccionados:', 20, y);
            y += 10;

            doc.setFontSize(10);
            doc.setFont(undefined, 'normal');

            let currentCategory = '';
            selectedItems.forEach(item => {
                if (item.category !== currentCategory) {
                    y += 5;
                    doc.setFont(undefined, 'bold');
                    doc.setTextColor(102, 126, 234);
                    doc.text(item.category, 20, y);
                    doc.setTextColor(0, 0, 0);
                    doc.setFont(undefined, 'normal');
                    y += 6;
                    currentCategory = item.category;
                }

                if (y > 270) {
                    doc.addPage();
                    y = 20;
                }

                doc.text(`‚Ä¢ ${item.name}`, 25, y);
                doc.text(`${formatCurrency(item.min)} - ${formatCurrency(item.max)}`, 150, y);
                y += 6;
            });

            // Total section
            y += 10;
            if (y > 250) {
                doc.addPage();
                y = 20;
            }

            doc.setFillColor(102, 126, 234);
            doc.rect(20, y, 170, 40, 'F');
            
            doc.setTextColor(255, 255, 255);
            doc.setFontSize(12);
            doc.text(`M√≠nimo Estimado: ${formatCurrency(minTotal)}`, 25, y + 10);
            doc.text(`M√°ximo Estimado: ${formatCurrency(maxTotal)}`, 25, y + 20);
            doc.setFontSize(14);
            doc.setFont(undefined, 'bold');
            doc.text(`Promedio: ${formatCurrency((minTotal + maxTotal) / 2)}`, 25, y + 32);

            const avgPerPerson = ((minTotal + maxTotal) / 2) / guests;
            doc.setFontSize(10);
            doc.setFont(undefined, 'normal');
            doc.text(`Costo promedio por persona: ${formatCurrency(avgPerPerson)}`, 105, y + 38, { align: 'center' });

            doc.save(`Cotizacion_Boda_${cityName}_${guests}personas.pdf`);
        }

        // Initialize
        renderCategories();
        document.getElementById('guests').addEventListener('input', updateSummary);
        document.getElementById('city').addEventListener('change', updateSummary);
        updateSummary();
    </script>
