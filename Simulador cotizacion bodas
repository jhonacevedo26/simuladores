    <script>
        const services = {
            "Locaci√≥n y Espacios": [
                { name: "Alquiler de sal√≥n/casa hotel", min: 8000000, max: 35000000 },
                { name: "Decoraci√≥n y ambientaci√≥n", min: 4000000, max: 18000000 },
                { name: "Mobiliario (sillas, mesas, manteler√≠a)", min: 2500000, max: 8000000 },
                { name: "Iluminaci√≥n especial", min: 1500000, max: 6000000 }
            ],
            "Catering y Bebidas": [
                { name: "Servicio de alimentaci√≥n", min: 80000, max: 250000, perPerson: true },
                { name: "Barra libre/Licores", min: 3000000, max: 12000000 },
                { name: "Torta de matrimonio", min: 600000, max: 2500000 },
                { name: "Mesa de postres", min: 800000, max: 3000000 },
                { name: "Estaci√≥n de caf√© y t√©", min: 400000, max: 1200000 }
            ],
            "Entretenimiento": [
                { name: "Grupo musical/DJ", min: 2500000, max: 15000000 },
